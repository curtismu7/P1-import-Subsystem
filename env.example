# Server Configuration
NODE_ENV=development
PORT=10000

# Rate Limiting
RATE_LIMIT=50

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# CORS (for production)
CORS_ORIGIN=https://your-app-name.onrender.com

# Security
SESSION_SECRET=your-super-secret-session-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this

# File Upload Limits
MAX_FILE_SIZE=10mb

# PingOne API Settings (these will be configured through the UI)
# PINGONE_ENVIRONMENT_ID=your-environment-id
# PINGONE_CLIENT_ID=your-api-client-id
# PINGONE_CLIENT_SECRET=your-api-secret
# PINGONE_REGION=NorthAmerica

# Auth Subsystem Configuration
AUTH_SUBSYSTEM_ENCRYPTION_KEY=change-this-to-a-random-32-character-string